{$DOMAIN}:80 {
  reverse_proxy http://backend1:3000 http://backend2:3000
}

{$DOMAIN}:443 {
  tls {
    dns cloudflare {$CLOUDFLARE_API_TOKEN}
  }
  reverse_proxy http://backend1:3000 http://backend2:3000
}

www.{$DOMAIN}:80 {
  reverse_proxy http://backend1:3000 http://backend2:3000
}

www.{$DOMAIN}:443 {
  tls {
    dns cloudflare {$CLOUDFLARE_API_TOKEN}
  }
  reverse_proxy http://backend1:3000 http://backend2:3000
}

ru.{$DOMAIN}:80 {
  reverse_proxy http://backend1:3000 http://backend2:3000
}

ru.{$DOMAIN}:443 {
  tls {
    dns cloudflare {$CLOUDFLARE_API_TOKEN}
  }
  reverse_proxy http://backend1:3000 http://backend2:3000
}
